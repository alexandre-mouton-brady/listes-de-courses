.header
  background #fff
  padding 40px 20px
  display grid
  grid-template-columns 1fr auto
  grid-template-rows repeat(2, auto)

  &__title
    grid-row 1 / 2
    grid-column 1 / 2
    font-size 1.8rem
    margin-bottom 10px

  &__subtitle
    grid-row 2 / 3
    grid-column 1 / 2
    font-size 1.2rem
    font-weight normal

  &__btn
    align-self center
    grid-row 1 / 3
    grid-column 2 / 3
    height 45px
    width 45px
    border-radius 50% 
    display flex
    align-items center
    justify-content center
    cursor pointer

    background #6db0ff
    color #fff
    box-shadow 0 2px 5px rgba(0, 0, 0, 0.26)
    font-size 2rem

@media (max-width: 440px)
  .header
    &__title
      font-size 1.4rem

    &__subtitle
      font-size 1rem